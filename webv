    <script>
        function calculateCost() {
            const spaceType = document.getElementById('space-type').value;
            const spaceSize = parseInt(document.getElementById('space-size').value);
            const packageLevel = document.getElementById('package').value;
            const timeline = document.getElementById('timeline').value;
            
            // Base rates per sq.ft
            let baseRate;
            switch(packageLevel) {
                case 'basic':
                    baseRate = 12;
                    break;
                case 'premium':
                    baseRate = 20;
                    break;
                case 'luxury':
                    baseRate = 30;
                    break;
                default:
                    baseRate = 20;
            }
            
            // Adjust for space type
            let typeMultiplier = 1;
            if (spaceType === 'kitchen' || spaceType === 'bathroom') {
                typeMultiplier = 1.3; // More expensive per sq.ft
            } else if (spaceType === 'full') {
                typeMultiplier = 0.9; // Discount for whole home
            }
            
            // Calculate base cost
            let cost = baseRate * spaceSize * typeMultiplier;
            
            // Adjust for timeline
            if (timeline === 'expedited') {
                cost *= 1.2;
            }
            
            // Minimum cost
            cost = Math.max(cost, 2000);
            
            // Display result
            document.getElementById('estimated-cost').textContent = '$' + Math.round(cost).toLocaleString();
            document.getElementById('result').style.display = 'block';
        }
    </script>
</body>
</html>
