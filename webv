                            <option value="premium" selected>Premium</option>
                            <option value="luxury">Luxury</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="timeline">Project Timeline</label>
                        <select id="timeline" class="form-control">
                            <option value="standard">Standard (8-12 weeks)</option>
                            <option value="expedited">Expedited (+20% fee)</option>
                        </select>
                    </div>
                </div>
                <button type="button" class="btn" style="width: 100%;" onclick="calculateCost()">Calculate Estimated Cost</button>
                <div id="result" class="result" style="display: none;">
                    Estimated Cost: <span id="estimated-cost">$0</span>
                </div>
            </div>
        </div>
    </section>
    
